#include<stdio.h>
int main(){
    int x;
    scanf("%d", &x);
    int mid = (2*x)-1;
    for(int i = 1;i<=x;i++){
        for(int j = 1;j<=mid;j++){
            if(j <= x-i || j >= x+i)
                printf(" ");
            else
                printf("*");
        }
        printf("\n");
    }
}
//ไม่มั่นใจนะครับว่ารูปแบบนี้ คือส่งถูกแล้วใช่ไหม
